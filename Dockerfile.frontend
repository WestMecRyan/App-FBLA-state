# Frontend Dockerfile
FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy source code
COPY . .

# Clear any potential cache issues
RUN npx expo install --fix

# Expose port
EXPOSE 8081

# Start the web version using npx
CMD ["npx", "expo", "start", "--web", "--host", "tunnel", "--port", "8081"]